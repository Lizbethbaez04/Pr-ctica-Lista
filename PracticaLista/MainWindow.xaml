        <TextBlock x:Name="lblNombreMateria" HorizontalAlignment="Left" Margin="613,157,0,0" TextWrapping="Wrap" Text="Materia" VerticalAlignment="Top"/>
        <ListBox x:Name="lstMaterias" HorizontalAlignment="Left" Height="369" Margin="399,31,0,0" VerticalAlignment="Top" Width="149" SelectionChanged="lstMaterias_SelectionChanged"/>

    </Grid>
</Window>
